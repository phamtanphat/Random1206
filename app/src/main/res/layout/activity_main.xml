<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewtitle"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#f20"
        android:textSize="60sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random"/>

    <EditText
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:layout_below="@id/textviewtitle"
        android:hint="Nhap vao so min"
        android:id="@+id/edittextSomin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:layout_below="@id/edittextSomin"
        android:hint="Nhap vao so max"
        android:id="@+id/edittextSomax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edittextSomax"
        android:text="Them gia tri vao mang"
        android:id="@+id/buttonAddArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Random"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/buttonAddArray"
        android:id="@+id/buttonRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textviewKetqua"
        android:textColor="#2f417e"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/buttonRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>